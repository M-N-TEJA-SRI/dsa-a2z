#include <iostream>
#include<climits>
using namespace std;
int smallestdiv(int a[],int n,int mid,int k){
    int i,sum=0;
    for(i=0;i<n;i++){
        sum+=a[i]/mid;
        if(a[i]%mid!=0)
        sum+=1;
        if(sum>k)
        return 0;
    }
  return 1;  
}
int main() {
   int n,k;
   cin>>n>>k;
   int a[n],i,l=1,h=INT_MIN,mid,ans=-1,x;
   for(i=0;i<n;i++){
       cin>>a[i];
       h=max(h,a[i]);
   }
while(l<=h){
    mid=(l+h)/2;
    x=smallestdiv(a,n,mid,k);
    if(x==0)
    l=mid+1;
    else{
        ans=mid;
        h=mid-1;
    }
}
  cout<<ans;
    return 0;
}
output
4 8
3 6 7 11
4
