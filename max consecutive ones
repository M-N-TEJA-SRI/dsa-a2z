#include <iostream>
#include<vector>
using namespace std;
int main() {
   int n;
   cin>>n;
   int a[n],i,c=0,maxi=0;
   for(i=0;i<n;i++){
       cin>>a[i];
       if(a[i]==1)
     {  c++;
     maxi=max(maxi,c);
     }
     else
     c=0;
   }
   
    cout<<maxi;

    return 0;
}
output
4
1 1 0 1
2
